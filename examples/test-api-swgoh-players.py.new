#!/usr/bin/env python

import os, sys
sys.path.append(os.path.dirname(os.path.dirname(os.path.realpath(__file__))))

import json
from config import load_config
from swgohhelp import api_swgoh_players, api_crinolo

def write_file(name, content):
	fout = open(name, 'w')
	fout.write(json.dumps(content, indent=4))
	fout.close()

async def __main__():

	config = load_config()
	ally_codes = [ 349423868 ]

	players = await api_swgoh_players(config, { 'allycodes': ally_codes })
	write_file('players.json', players)

	result = await api_crinolo(config, players)
	write_file('result.json', result)

if __name__ == '__main__':
	import asyncio
	asyncio.get_event_loop().run_until_complete(__main__())
